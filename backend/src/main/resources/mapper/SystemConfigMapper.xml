<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsn.cow.mapper.SystemConfigMapper">

    <resultMap id="BaseResultMap" type="com.wsn.cow.entity.SystemConfig">
        <id column="id" property="id"/>
        <result column="config_key" property="configKey"/>
        <result column="config_value" property="configValue"/>
        <result column="description" property="description"/>
        <result column="config_type" property="configType"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.wsn.cow.entity.SystemConfig" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_config (config_key, config_value, description, config_type, create_time, update_time)
        VALUES (#{configKey}, #{configValue}, #{description}, #{configType}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM system_config WHERE id = #{id}
    </select>

    <select id="selectByKey" resultMap="BaseResultMap">
        SELECT * FROM system_config WHERE config_key = #{configKey}
    </select>

    <select id="selectByType" resultMap="BaseResultMap">
        SELECT * FROM system_config WHERE config_type = #{configType} ORDER BY id
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM system_config ORDER BY config_type, id
    </select>

    <update id="updateValue">
        UPDATE system_config
        SET config_value = #{configValue}, update_time = NOW()
        WHERE config_key = #{configKey}
    </update>

    <update id="updateById" parameterType="com.wsn.cow.entity.SystemConfig">
        UPDATE system_config
        <set>
            <if test="configValue != null">config_value = #{configValue},</if>
            <if test="description != null">description = #{description},</if>
            <if test="configType != null">config_type = #{configType},</if>
            update_time = NOW(),
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM system_config WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.wsn.cow.entity.SystemConfig">
        UPDATE system_config
        SET config_value = #{configValue},
            description = #{description},
            update_time = #{updateTime}
        WHERE config_key = #{configKey}
    </update>

    <delete id="deleteByKey">
        DELETE FROM system_config WHERE config_key = #{configKey}
    </delete>

</mapper>
