<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsn.cow.mapper.DeviceInfoMapper">

    <resultMap id="BaseResultMap" type="com.wsn.cow.entity.DeviceInfo">
        <id column="id" property="id"/>
        <result column="device_id" property="deviceId"/>
        <result column="device_name" property="deviceName"/>
        <result column="device_type" property="deviceType"/>
        <result column="status" property="status"/>
        <result column="auto_mode" property="autoMode"/>
        <result column="control_mode" property="controlMode"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.wsn.cow.entity.DeviceInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO device_info (device_id, device_name, device_type, status, auto_mode)
        VALUES (#{deviceId}, #{deviceName}, #{deviceType}, #{status}, #{autoMode})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM device_info WHERE id = #{id}
    </select>

    <select id="selectByDeviceId" resultMap="BaseResultMap">
        SELECT * FROM device_info WHERE device_id = #{deviceId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM device_info ORDER BY device_id
    </select>

    <select id="selectByType" resultMap="BaseResultMap">
        SELECT * FROM device_info WHERE device_type = #{deviceType} ORDER BY device_id
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM device_info WHERE status = #{status} ORDER BY device_id
    </select>

    <update id="updateById" parameterType="com.wsn.cow.entity.DeviceInfo">
        UPDATE device_info
        <set>
            <if test="deviceName != null">device_name = #{deviceName},</if>
            <if test="deviceType != null">device_type = #{deviceType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="autoMode != null">auto_mode = #{autoMode},</if>
            <if test="controlMode != null">control_mode = #{controlMode},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE device_info 
        SET status = #{status}
        WHERE device_id = #{deviceId}
    </update>

    <update id="updateAutoMode">
        UPDATE device_info
        SET auto_mode = #{autoMode}
        WHERE device_id = #{deviceId}
    </update>

    <delete id="deleteById">
        DELETE FROM device_info WHERE id = #{id}
    </delete>

</mapper>
