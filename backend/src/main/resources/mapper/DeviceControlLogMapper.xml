<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsn.cow.mapper.DeviceControlLogMapper">

    <resultMap id="BaseResultMap" type="com.wsn.cow.entity.DeviceControlLog">
        <id column="id" property="id"/>
        <result column="device_id" property="deviceId"/>
        <result column="control_action" property="controlAction"/>
        <result column="control_mode" property="controlMode"/>
        <result column="operator" property="operator"/>
        <result column="control_time" property="controlTime"/>
        <result column="reason" property="reason"/>
    </resultMap>

    <insert id="insert" parameterType="com.wsn.cow.entity.DeviceControlLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO device_control_log (device_id, control_action, control_mode,
                                       operator, control_time, reason)
        VALUES (#{deviceId}, #{controlAction}, #{controlMode},
                #{operator}, #{controlTime}, #{reason})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM device_control_log WHERE id = #{id}
    </select>

    <select id="selectLatestByDeviceId" resultMap="BaseResultMap">
        SELECT * FROM device_control_log
        WHERE device_id = #{deviceId}
        ORDER BY control_time DESC
        LIMIT 1
    </select>

    <select id="selectPage" resultMap="BaseResultMap">
        SELECT * FROM device_control_log
        WHERE 1=1
        <if test="deviceId != null and deviceId != ''">
            AND device_id = #{deviceId}
        </if>
        <if test="controlType != null and controlType != ''">
            AND control_mode = #{controlType}
        </if>
        <if test="startTime != null">
            AND control_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND control_time &lt;= #{endTime}
        </if>
        ORDER BY control_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countByCondition" resultType="int">
        SELECT COUNT(*) FROM device_control_log
        WHERE 1=1
        <if test="deviceId != null and deviceId != ''">
            AND device_id = #{deviceId}
        </if>
        <if test="controlType != null and controlType != ''">
            AND control_mode = #{controlType}
        </if>
        <if test="startTime != null">
            AND control_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND control_time &lt;= #{endTime}
        </if>
    </select>

    <delete id="deleteBeforeTime">
        DELETE FROM device_control_log WHERE control_time &lt; #{time}
    </delete>

</mapper>
